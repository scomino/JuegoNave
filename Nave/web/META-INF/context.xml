<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/Nave">
<Resource
        auth="Container"
        description="PostgresqlDB Connection"
        name="jdbc/webdb"
        type="javax.sql.DataSource"
        username="webuser"
        password="webuser"
        driverClassName="org.postgresql.Driver"
        initialSize="3"
        maxActive="100"
        maxIdle="5"
        minIdle="3"
        maxWait="200"
        validationQuery=""
        poolPreparedStatements="false"
        url="jdbc:postgresql://localhost:5432/webdb"
    />
</Context>